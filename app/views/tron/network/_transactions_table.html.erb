<div class="row">
  <div class="col-12 col-lg-12 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.latest_transactions') %></div>
      <div class="card-body">
        <div id="latest_transactions"><%= t('loading') %></div>
      </div>
    </div>
  </div>
</div>

<script>

    $( document ).ready(function() {


        var query = new widgets.query(`
                        query (
                                $limit: Int!,
                                $offset: Int!
                                $from: ISO8601DateTime,
                                $till: ISO8601DateTime){
                    tron{
                      transactions(options:{desc: "block.height", limit: $limit, offset: $offset},
                        date: {since: $from till: $till }
                        ) {

                          block {
                            timestamp {
                              time (format: "%Y-%m-%d %H:%M:%S")
                            }
                            height
                          }

                          hash
                          fee
                          fee_usd: fee(in: USD)

                      }
                    }
                  }`);

        new widgets.table('#latest_transactions', query, 'tron.transactions', {
            title: '<%= t('widgets.headers.latest_transactions') %>',
            dataOptions: [
                {
                    title: '<%= t('widgets.titles.timestamp') %>',
                    type: 'string',
                    path: 'block.timestamp.time',
                    style: 'width: 170px;'
                },
                {
                    title: '<%= t('widgets.titles.block') %>',
                    type: 'string',
                    path: 'block.height',
                    urlCallbackName: 'block_path',
                    style: 'width: 80px;'
                },
                {
                    title: '<%= t('widgets.titles.hash') %>',
                    type: 'string-ellipsis',
                    path: 'hash',
                    urlCallbackName: 'transaction_path'
                },
                {
                    title: '<%= t('widgets.titles.fee') %>, <%= @network[:currency] %>',
                    type: 'amount',
                    path: 'fee',
                    style: 'width: 110px;'
                },
                {
                    title: '',
                    type: 'string',
                    path: 'fee_usd',
                    style: 'width: 90px;',
                    renderCallback: <%= render partial: 'ethereum/currency_with_amount_usd.text', locals: {currency: '""', amount: 'item.fee_usd', precision: 4} %>
                }
            ]
        });

        queryWithTimeRange(rr, query, <%= limited_date_range_limit(@from, @till).join(',').html_safe %>,{
        });

    });

</script>