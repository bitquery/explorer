<div class="row">
  <div class="col-12 col-lg-12 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.blocks_on_height') %></div>
      <div class="card-body">
        <div id="blocks_on_height"><%= t('loading') %></div>
      </div>
    </div>
  </div>
</div>

<script>

    $( document ).ready(function() {


        var query = new widgets.query(`
                        query ( $network: StellarNetwork!,
                                $height: Int){
                    stellar(network: $network){
                      blocks(
                          height: {is: $height }
                        ) {

                          timestamp {
                            time (format: "%Y-%m-%d %H:%M:%S")
                          }
                          height
                          hash
                      }
                    }
                  }`);

        new widgets.table('#blocks_on_height', query, 'stellar.blocks', {
            title: '<%= t('widgets.headers.blocks_on_height') %>',
            dataOptions: [
                {
                    title: '<%= t('widgets.titles.timestamp') %>',
                    type: 'string',
                    path: 'timestamp.time'
                },
                {
                    title: '<%= t('widgets.titles.height') %>',
                    path: 'height',
                    urlCallbackName: 'height_path'
                },
                {
                    title: '<%= t('widgets.titles.hash') %>',
                    path: 'hash'
                }
            ]
        });

        query.request({
            network: '<%= @network[:network] %>',
            height: <%= @height %>
        });

    });

</script>