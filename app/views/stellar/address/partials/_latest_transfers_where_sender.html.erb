<div class="row">
  <div class="col-12 col-lg-12 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.latest_transfers_where_sender') %></div>
      <div class="card-body">
        <div id="latest_transfers_where_sender"><%= t('loading') %></div>
      </div>
    </div>
  </div>
</div>

<script>

    $(document).ready(function () {


        var query = new widgets.query(`
                        query ($network: StellarNetwork!,
                                $limit: Int!,
                                $offset: Int!
                                $from: ISO8601DateTime,
                                $till: ISO8601DateTime,
                                $address: String!
                              ){
                    stellar(network: $network){
                      transfers(
                          options:{desc: "block", limit: $limit, offset: $offset},
                          date: {since: $from till: $till }
                          sender: {is: $address}
                        ) {
                          timestamp {
                            time
                          }
                          block
                          transaction {
                            hash
                          }
                          currencyFrom {
                            name
                            symbol
                          }
                          currencyTo {
                            name
                            symbol
                          }
                          amountFrom
                          amount_from_usd: amountFrom(in: USD)
                          amountTo
                          amount_to_usd: amountTo(in: USD)
                          direction
                          receiver {
                            address
                            annotation
                          }
                          operation {
                            index
                            name
                          }
                      }
                    }
                  }`);

        new widgets.table('#latest_transfers_where_sender', query, 'stellar.transfers', {
            title: '<%= t('widgets.headers.latest_transfers_where_sender') %>',
            dataOptions: [
                {
                    title: '<%= t('widgets.titles.timestamp') %>',
                    type: 'string',
                    path: 'timestamp.time',
                    style: 'width: 170px;'
                },
                {
                    title: '<%= t('widgets.titles.height') %>',
                    type: 'string',
                    path: 'block',
                    urlCallbackName: 'height_path',
                    style: 'width: 80px;'
                },
                {
                    title: '<%= t('widgets.titles.tx_hash') %>',
                    type: 'string-ellipsis',
                    path: 'transaction.hash',
                    urlCallbackName: 'transaction_hash_path'
                },
                {
                    title: '<%= t('widgets.titles.receiver') %>',
                    type: 'string-ellipsis',
                    path: ['receiver.address'],
                    urlCallbackName: 'receiver_address_path'
                },
                {
                    title: '<%= t('widgets.titles.amount_from') %>',
                    type: 'amount',
                    path: 'amountFrom'
                },
                {
                  style: 'width: 80px;',
                  renderCallback: <%= render partial: 'ethereum/currency_with_amount_usd.text', locals: {currency: '""', amount: 'item.amount_from_usd'} %>
                },
                {
                    title: '<%= t('widgets.titles.currency_from') %>',
                    type: 'string',
                    path: 'currencyFrom.symbol'
                },
                {
                    title: '<%= t('widgets.titles.amount_to') %>',
                    type: 'amount',
                    path: 'amountTo'
                },
                {
                  style: 'width: 80px;',
                  renderCallback: <%= render partial: 'ethereum/currency_with_amount_usd.text', locals: {currency: '""', amount: 'item.amount_to_usd'} %>
                },
                {
                    title: '<%= t('widgets.titles.currency_to') %>',
                    type: 'string',
                    path: 'currencyTo.symbol'
                },
                {
                    title: '<%= t('widgets.titles.direction') %>',
                    path: 'direction'
                },
                {
                    title: '<%= t('widgets.titles.operation_index') %>',
                    path: 'operation.index'
                },
                {
                    title: '<%= t('widgets.titles.operation_name') %>',
                    path: 'operation.name'
                },
            ]
        });

        queryWithTimeRange(rr, query, <%= limited_date_range_limit(@from, @till).join(',').html_safe %>, {
            address: '<%= @address %>',
            network: '<%= params['network']['network'] %>'
        });

    });

</script>
