<div class="row">
  <div class="col-12 col-lg-12 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.latest_miniblocks_shard_sender') %></div>
      <div class="card-body">
        <div id="latest_miniblocks_shard_sender"><%= t('loading') %></div>
      </div>
    </div>
  </div>
</div>

<script>

  $( document ).ready(function() {

    const qraphql_query = `
      query ($network: ElrondNetwork!, $limit: Int!, $offset: Int!, $from: ISO8601DateTime, $till: ISO8601DateTime, $shard_id: Int!) {
        elrond(network: $network) {
          miniblocks(
            options: {desc: "time.time", limit: $limit, offset: $offset}
            date: {since: $from, till: $till}
            shard: {is: $shard_id}
          ) {
            time {
              time(format: "%Y-%m-%d %H:%M:%S")
            }
            hash
            receiverBlockHash
            receiverShard
            type
          }
        }
      }
    `.trim();

    const query = new widgets.query(qraphql_query);

    new widgets.table('#latest_miniblocks_shard_sender', query, 'elrond.miniblocks', {
      title: '<%= t('widgets.headers.latest_miniblocks_shard_sender') %>',
      dataOptions: [
        {
          title: '<%= t('widgets.titles.timestamp') %>',
          type: 'string',
          path: 'time.time',
          style: 'width: 170px;'
        },
        {
          title: '<%= t('widgets.titles.hash') %>',
          type: 'string-ellipsis',
          path: 'hash',
          urlCallbackName: 'miniblocks_path',
        },
        {
          title: '<%= t('widgets.titles.receiver_block') %>',
          type: 'string-ellipsis',
          path: 'receiverBlockHash',
          urlCallbackName: 'receiver_block_path'
        },
        {
          title: '<%= t('widgets.titles.receiver_shard') %>',
          type: 'string',
          path: 'receiverShard',
          urlCallbackName: 'receiver_shard_path'
        },
        {
          title: '<%= t('widgets.titles.type') %>',
          type: 'string',
          path: 'type'
        },
      ]
    });

    queryWithTimeRange(rr, query, <%= limited_date_range_limit(@from, @till).join(',').html_safe %>,{
        shard_id: <%= @shard_id %>,
        network: '<%= params['network']['network'] %>'
      });
    });
</script>

