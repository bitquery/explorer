<div class="row">
  <div class="col-12 col-lg-12 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.inbound_transfers') %></div>
      <div class="card-body">
        <div id="inbound_transfers"><%= t('loading') %></div>
      </div>
    </div> </div>
</div>

<script>
  $( document ).ready(function() {
    const qraphql_query = `
      query ($network: FlowNetwork!, $limit: Int!, $offset: Int!, $from: ISO8601DateTime, $till: ISO8601DateTime, $address: String!) {
        flow(network: $network) {
          outputs(
            options: {desc: "time.time", limit: $limit, offset: $offset}
            date: {since: $from, till: $till}
            address: {is: $address}
          ) {
            time {
              time(format: "%Y-%m-%d %H:%M:%S")
            }
            transaction {
              id
            }
            currency {
              symbol
            }
            entityId
            amount
            smartContractMethod {
              signature
            }
            eventIndex
            transferReason
          }
        }
      }
    `.trim();

    const query = new widgets.query(qraphql_query);

    new widgets.table('#inbound_transfers', query, 'flow.outputs', {
      title: '<%= t('widgets.headers.inbound_transfers') %>',
      dataOptions: [
        {
          title: '<%= t('widgets.titles.timestamp') %>',
          type: 'string',
          path: 'time.time'
        },
        {
          title: '<%= t('widgets.titles.transaction_id') %>',
          type: 'string',
          path: 'transaction.id',
          urlCallbackName: 'transaction_by_id',
        },
        {
          title: '<%= t('widgets.titles.event_index') %>',
          type: 'string',
          path: 'eventIndex'
        },
        {
          title: '<%= t('widgets.titles.nft_id') %>',
          type: 'string',
          path: 'entityId'
        },
        {
          title: '<%= t('widgets.titles.amount') %>',
          type: 'string',
          path: 'amount'
        },
        {
          title: '<%= t('widgets.titles.currency') %>',
          type: 'string',
          path: 'currency.symbol'
        },
        {
          title: '<%= t('widgets.titles.transfer_reason') %>',
          type: 'string',
          path: 'transferReason'
        },
        {
          title: '<%= t('widgets.titles.method') %>',
          type: 'string',
          path: 'smartContractMethod.signature'
        },
      ]
    });

    queryWithTimeRange(rr, query, <%= limited_date_range_limit(@from, @till).join(',').html_safe %>,{
      address: "<%= @address %>",
      network: '<%= params['network']['network'] %>'
    });
  });
</script>

