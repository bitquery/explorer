<script>
    widgets.callbacks({
        <%# Block %>
        height_path: function (item) {
            return '<%= locale_path_prefix %><%= @network[:network] %>' + '/block/' + (item.block || item.height || item.block.height);
        },

        <%# Address %>
        sender_address_path: function (item) {
            return '<%= locale_path_prefix %><%= @network[:network] %>' + '/address/' + item.sender.address;
        },
        receiver_address_path: function (item) {
            return '<%= locale_path_prefix %><%= @network[:network] %>' + '/address/' + item.receiver.address;
        },
        address_path: function (item) {
            return '<%= locale_path_prefix %><%= @network[:network] %>' + '/address/' + item.address.address;
        },
        issuer_path: function (item) {
            return '<%= locale_path_prefix %><%= @network[:network] %>' + '/address/' + item.issuer.address;
        },
        destination_address_path: function (item) {
            return '<%= locale_path_prefix %><%= @network[:network] %>' + '/address/' + item.account.address;
        },
        account_address_path: function (item) {
            return '<%= locale_path_prefix %><%= @network[:network] %>' + '/address/' + item.account.address;
        },

        <%# Token %>
        token_from_path: function(item){
          return '<%= locale_path_prefix %><%= @network[:network] %>/token/'+  escapeHtml(item.currencyFrom.symbol);
        },

        token_to_path: function(item){
          return '<%= locale_path_prefix %><%= @network[:network] %>/token/'+  escapeHtml(item.currencyTo.symbol);
        },

        amount_currency_path: function(item){
          return '<%= locale_path_prefix %><%= @network[:network] %>/token/'+  escapeHtml(item.amountCurrency.symbol);
        },
        currency_path: function(item){
          return '<%= locale_path_prefix %><%= @network[:network] %>/token/'+  escapeHtml(item.currency.symbol);
        },

        taker_gets_currency_path: function(item){
          return '<%= locale_path_prefix %><%= @network[:network] %>/token/'+  escapeHtml(item.takerGetsCurrency.symbol);
        },
        taker_pays_currency_path: function(item){
          return '<%= locale_path_prefix %><%= @network[:network] %>/token/'+  escapeHtml(item.takerPaysCurrency.symbol);
        },

        <%# Tx %>
        transaction_path: function (item) {
            return '<%= locale_path_prefix %><%= @network[:network] %>' + '/tx/' + item.hash;
        },
        transaction_hash_path: function (item) {
            return '<%= locale_path_prefix %><%= @network[:network] %>' + '/tx/' + item.transaction.hash;
        },

        property_value_path: function(item) {
            if (item.address) {
                return '<%= locale_path_prefix %><%= @network[:network] %>' + '/address/' + item.address.address;
            } else if (item.block) {
                return '<%= locale_path_prefix %><%= @network[:network] %>' + '/block/' + item.block;
            } else {
                return null;
            }
        }


        });

</script>


