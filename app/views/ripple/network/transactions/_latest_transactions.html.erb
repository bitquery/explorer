<div class="row">
  <div class="col-12 col-lg-12 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.latest_transactions') %></div>
      <div class="card-body">
        <div id="latest_transactions"><%= t('loading') %></div>
      </div>
    </div>
  </div>
</div>

<script>

    $(document).ready(function () {


        var query = new widgets.query(`
                        query ($network: RippleNetwork!,
                                $limit: Int!,
                                $offset: Int!
                                $from: ISO8601DateTime,
                                $till: ISO8601DateTime){
                    ripple(network: $network){
                      transactions(options:{desc: "block", limit: $limit, offset: $offset},
                        time: {since: $from till: $till }
                        ) {
                          block
                          timestamp {
                            time(format: "%Y-%m-%d %H:%M:%S")
                          }
                          hash
                          index
                          fee
                          fee_usd: fee(in: USD)
                          sender {
                            address
                            annotation
                          }
                          success
                        }
                    }
                  }`);

        new widgets.table('#latest_transactions', query, 'ripple.transactions', {
            title: '<%= t('widgets.headers.latest_transactions') %>',
            dataOptions:[
                {
                    title: '<%= t('widgets.titles.timestamp') %>',
                    type: 'string',
                    path: 'timestamp.time'
                },
                {
                    title: '<%= t('widgets.titles.block') %>',
                    type: 'string-ellipsis',
                    path: 'block',
                    urlCallbackName: 'height_path'
                },
                {
                    title: '<%= t('widgets.titles.index') %>',
                    type: 'string',
                    path: 'index'
                },
                {
                    title: '<%= t('widgets.titles.hash') %>',
                    type: 'string',
                    path: 'hash',
                    urlCallbackName: 'transaction_path'
                },
                {
                    title: '<%= t('widgets.titles.sender') %>',
                    type: 'string',
                    path: ['sender.annotation', 'sender.address'],
                    urlCallbackName: 'sender_address_path'
                },
                {
                    title: '<%= t('widgets.titles.fee') %>',
                    type: 'string',
                    path: 'fee'
                },
                {
                    style: 'width: 80px;',
                    renderCallback: <%= render partial: 'ethereum/currency_with_amount_usd.text', locals: {currency: '""', amount: 'item.fee_usd'} %>
                },
                {
                    title: '<%= t('widgets.titles.success') %>',
                    type: 'string',
                    path: 'success'
                },
            ] 
        });

      <% from, till = date_range_from_now(30, :minutes) %>
      queryWithTimeRange(rr, query, "<%= from %>", "<%= till %>", {
          network: '<%= params['network']['network'] %>'
      });

    });

</script>
