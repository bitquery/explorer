<div class="row">
  <div class="col-12 col-lg-12 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.latest_payments') %></div>
      <div class="card-body">
        <div id="latest_payments"><%= t('loading') %></div>
      </div>
    </div>
  </div>
</div>

<script>

    $(document).ready(function () {


        var query = new widgets.query(`
              query ($network: RippleNetwork!,
                      $limit: Int!,
                      $offset: Int!
                      $from: ISO8601DateTime,
                      $till: ISO8601DateTime,
                      $hash: String!
                    ){
          ripple(network: $network){
            payments(
                options:{asc: "timestamp.time", limit: $limit, offset: $offset},
                date: {since: $from till: $till }
                transactionHash: {is: $hash}
              ) {
                timestamp {
                  time
                }
                block
                transaction {
                  index
                }
                receiver {
                  address
                  annotation
                }
                sender {
                  address
                  annotation
                }
                amountCurrency{
                  symbol
                  name
                }
                amount
                amount_usd: amount(in: USD)
            }
          }
        }
      `);

        new widgets.table('#latest_payments', query, 'ripple.payments', {
            title: '<%= t('widgets.headers.latest_payments') %>',
            dataOptions: [
              {
                  title: '<%= t('widgets.titles.timestamp') %>',
                  type: 'string',
                  path: 'timestamp.time',
                  style: 'width: 170px;'
              },
              {
                  title: '<%= t('widgets.titles.block') %>',
                  type: 'string-ellipsis',
                  path: 'block',
                  urlCallbackName: 'height_path'
              },
              {
                  title: '<%= t('widgets.titles.tx_index') %>',
                  type: 'string',
                  path: 'transaction.index'
              },
              {
                  title: '<%= t('widgets.titles.sender') %>',
                  type: 'string',
                  path: ['sender.annotation', 'sender.address'],
                  urlCallbackName: 'sender_address_path'
              },
              {
                  title: '',
                  type: 'string',
                  data: '<i class="fa fa-sign-in text-success"></i>',
                  html_class: 'text-center'
              },
              {
                  title: '<%= t('widgets.titles.receiver') %>',
                  type: 'string',
                  path: ['receiver.annotation', 'receiver.address'],
                  urlCallbackName: 'receiver_address_path'
              },
              {
                  title: '<%= t('widgets.titles.amount') %>',
                  type: 'amount',
                  path: 'amount'
              },
              {
                  style: 'width: 80px;',
                  renderCallback: <%= render partial: 'ethereum/currency_with_amount_usd.text', locals: {currency: '""', amount: 'item.amount_usd'} %>
              },
              {
                  title: '<%= t('widgets.titles.currency') %>',
                  type: 'string',
                  path: 'amountCurrency.symbol',
                  urlCallbackName: 'amount_currency_path'
              },
            ] 
        });

        query.request({
            hash: '<%= @hash %>',
            network: '<%= params['network']['network'] %>'
        });
    });

</script>
