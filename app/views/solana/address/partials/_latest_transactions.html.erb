<div class="row">
  <div class="col-12 col-lg-12 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.latest_transactions') %></div>
      <div class="card-body">
        <div id="latest_transactions"><%= t('loading') %></div>
      </div>
    </div>
  </div>
</div>

<script>

  $( document ).ready(function() {

      var query = new widgets.query(`
        query ($network: SolanaNetwork!, $limit: Int!, $offset: Int!, $date: ISO8601DateTime, $signer: String) {
          solana(network: $network) {
            transactions(
              options: {limit: $limit, offset: $offset}
              date: {is: $date}
              signer: {is: $signer}
            ) {
              signature
              block {
                timestamp {
                  time
                }
              }
              transactionFee
              success
            }
          }
        }
      `);

    new widgets.table('#latest_transactions', query, 'solana.transactions', {
      title: '<%= t('widgets.headers.latest_transactions') %>',
      dataOptions: [
        {
          title: '<%= t('widgets.titles.timestamp') %>',
          type: 'string',
          path: 'block.timestamp.time'
        },
        {
          title: '<%= t('widgets.titles.signature') %>',
          type: 'string',
          path: 'signature',
          urlCallbackName: 'tx_path',
        },
        {
          title: '<%= t('widgets.titles.transactionFee') %>, <%= @network[:currency] %>',
          type: 'string',
          path: 'transactionFee'
        },
        {
          title: '<%= t('widgets.titles.success') %>',
          type: 'bool',
          path: 'success'
        }
      ]
    });

    queryWithTimeRange(rr, query, <%= limited_date_range_limit(@from, @till).join(',').html_safe %>,{
        network: '<%= params['network']['network'] %>',
        signer: '<%= @address %>'
    });
  });
</script>



