
<div class="col-12 col-lg-12 mb-4">
  <div class="card">
    <div class="card-header"><%= t('widgets.headers.inbound_top_transfers') %></div>
    <div class="card-body">
      <div id="inbound_top_transfers"><%= t('loading') %></div>
    </div>
  </div>
</div>


<script>

    $( document ).ready(function() {


        var query = new widgets.query(`
                        query ($network: CardanoNetwork!,
                        $address:String!
                        $limit: Int!,
                        $offset: Int!
                        $from: ISO8601DateTime,
                        $till: ISO8601DateTime){
                          cardano(network: $network ){
                            outputs(
                            currency: {is: "ADA"}
                              date: {
                                              since: $from
                                              till: $till}
                              outputAddress: {is: $address}
                              options:{desc: "value"  asc: "block.height" limit: $limit, offset: $offset}
                            ){

                              block {
                                height
                                timestamp{
                                  time (format: "%Y-%m-%d %H:%M:%S")
                                }
                              }
                              transaction {
                                hash
                              }
                              outputIndex
                              outputDirection

                              value
                              value_usd: value(in: USD)
                            }


                          }
                        }`);

        new widgets.table('#inbound_top_transfers', query, 'cardano.outputs', {
            title: '<%= t('widgets.headers.inbound_top_transfers') %>',
            dataOptions: [
                {
                    title: '<%= t('widgets.titles.timestamp') %>',
                    type: 'string',
                    path: 'block.timestamp.time',
                    style: 'width: 180px'
                },
                {
                    title: '<%= t('widgets.titles.block') %>',
                    type: 'string',
                    path: 'block.height',
                    urlCallbackName: 'block_path',
                    style: 'width: 90px'
                },
                {
                    title: '<%= t('widgets.titles.amount') %>',
                    type: 'amount',
                    path: 'value',
                    style: 'width: 100px'
                },
                {
                    type: 'string-ellipsis',
                    data: '<%= @network[:currency] %>',
                    style: 'width: 120px',
                    renderCallback: <%= render partial: 'ethereum/currency_with_amount_usd', formats: :text, locals: {currency: "'#{@network[:currency]}'", amount: 'item.value_usd'} %>
                },
                {
                    title: '<%= t('widgets.titles.transfer_type') %>',
                    path: 'outputDirection',
                    style: 'width: 80px'
                },
                {
                    title: '<%= t('widgets.titles.output_index') %>',
                    style: 'width: 80px',
                    path: 'outputIndex'
                },
                {
                    title: '<%= t('widgets.titles.transaction') %>',
                    type: 'string-ellipsis',
                    path: 'transaction.hash',
                    urlCallbackName: 'transaction_path'
                },
            ]
        });

        queryWithTimeRange(rr, query, <%= @from.html_safe %>,<%= @till.html_safe %>,{
            address: '<%= @address %>',
            network: '<%= @network[:network] %>'
        });


    });

</script>