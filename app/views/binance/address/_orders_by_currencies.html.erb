<div class="col-12 col-lg-6 mb-4">
  <div class="card">
    <div class="card-header"><%= t('widgets.headers.orders_by_currencies') %></div>
    <div class="card-body">
      <div id="orders_by_currencies"><%= t('loading') %></div>
    </div>
  </div>
</div>


<script>

    $( document ).ready(function() {

        var query = new widgets.query(`
            query ( $address: String!,
                  $from: ISO8601DateTime,
                  $till: ISO8601DateTime){
                    binance {
                      orders(
                      options:{desc: "count", limit: 20},
                      date: {
                        since: $from
                        till: $till}
                        orderOwner: {is: $address}
                      ) {
                          quoteCurrency {
                            symbol
                            tokenId
                          }

                          baseCurrency {
                            symbol
                            tokenId
                          }
                          count(uniq:orders)
                      }
                    }
                  }`);

        new widgets.chart('#orders_by_currencies', query, 'binance.orders', {
            title: '<%= t('widgets.headers.orders_by_currencies') %>',
            chartType: 'PieChart',
            chartOptions: {
                pieSliceText: 'label',
                pieHole: 0.4,
                legend: {position: 'right'},
                chartArea:{left: '0', right: '15%', top: 0, bottom: 0}
            },

            dataOptions: [
                {
                    title: '<%= t('widgets.titles.trade_pair') %>',
                    renderCallback: function(item){
                        return item.quoteCurrency.symbol + ':' + item.baseCurrency.symbol;
                    },
                },
                {
                    title: '<%= t('widgets.titles.unique_orders') %>',
                    path: 'count'
                },

            ]
        });

        queryWithTimeRange(rr, query, <%= @from.html_safe %>,<%= @till.html_safe %>,{
            address: '<%= @address %>'
        });

    });
</script>