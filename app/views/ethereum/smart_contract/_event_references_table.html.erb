<div class="row">
  <div class="col-12 col-lg-12 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.event_references_table') %></div>
      <div class="card-body">
        <div id="event_references_table"><%= t('loading') %></div>
      </div>
    </div>
  </div>
</div>

<script>

    $( document ).ready(function() {


        var query = new widgets.query(`query ($network: EthereumNetwork!,
                                $address: String!,
                                $limit:Int,
                                $offset:Int,
                                $from: ISO8601DateTime,
                                $till: ISO8601DateTime){
                            ethereum(network: $network){
                              arguments(options:{
                                desc: "count",
                                limit:$limit, offset: $offset},
                                date: {since: $from till: $till },
                                smartContractAddress: {is: $address},
                              signatureType: Event) {
                                address: reference {
                                  address
                                  annotation
                                }
                                count
                                argument {
                                  name
                                }
                                smartContractSignature {
                                  __typename
                                  ... on Event {
                                    name
                                    signatureHash
                                  }
                                }
                              }

                            }
                          }`);

        new widgets.table('#event_references_table', query, 'ethereum.arguments', {
            title: '<%= t('widgets.headers.event_references_table') %>',
            tableOptions: {
                title: [
                    '<%= t('widgets.titles.address') %>',
                    '<%= t('widgets.titles.argument') %>',
                    '<%= t('widgets.titles.event') %>',
                    '<%= t('widgets.titles.calls_count') %>'
                ],
                dataOptions: [
                    {
                        type: 'string-ellipsis',
                        path: ['address.annotation','address.address'],
                        urlCallbackName: 'address_path'
                    },
                    {
                        type: 'string-ellipsis',
                        path: 'argument.name'
                    },
                    {
                        type: 'string-ellipsis',
                        path: 'smartContractSignature.name'
                    },
                    {
                        type: 'count',
                        path: 'count'
                    },
                ]
            }
        });

        queryWithTimeRange(rr, query, <%= @from.html_safe %>,<%= @till.html_safe %>,{
            network: '<%= params['network']['network'] %>',
            address: '<%= @address %>'
        });


    });

</script>