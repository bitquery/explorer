<div class="row">
  <div class="col-12 mb-4">
    <div class="alert alert-info d-flex align-items-center">
      <i class="fas fa-network-wired" style="margin-right: 12px;"></i>
      <span>Recent cross-chain activity for address across Ethereum, BSC, Arbitrum, and Base networks</span>
    </div>
  </div>
</div>

<div class="row" id="multichain-stats">
  <% @networks.each do |network_key, network_info| %>
    <div class="col-12 col-md-6 col-lg-3 mb-4">
      <div class="card h-100 border-0 shadow-sm <%= network_key %>-card">
        <div class="card-body">
          <div class="d-flex align-items-center mb-3">
            <%= image_tag network_info[:icon], alt: network_info[:name], style: "width: 32px; height: 32px; margin-right: 12px;" %>
            <h5 class="mb-0"><%= network_info[:name] %></h5>
          </div>
          
          <% if @network_stats[network_key] %>
            <div class="mb-3">
              <h6 class="text-muted mb-2">Transfer Count</h6>
              <div class="d-flex justify-content-between mb-1">
                <span class="text-muted">Received:</span>
                <span class="font-weight-bold text-success"><%= number_with_delimiter(@network_stats[network_key][:received]) %></span>
              </div>
              <div class="d-flex justify-content-between mb-1">
                <span class="text-muted">Sent:</span>
                <span class="font-weight-bold text-danger"><%= number_with_delimiter(@network_stats[network_key][:sent]) %></span>
              </div>
              <hr class="my-2">
              <div class="d-flex justify-content-between">
                <span class="text-muted">Total:</span>
                <span class="font-weight-bold"><%= number_with_delimiter(@network_stats[network_key][:total]) %></span>
              </div>
            </div>
            
            <% if @network_stats[network_key][:top_currencies].any? %>
              <div class="mt-3">
                <h6 class="text-muted mb-2">Top Sent Tokens</h6>
                <% @network_stats[network_key][:top_currencies].each do |currency| %>
                  <div class="d-flex justify-content-between align-items-center mb-1">
                    <span class="text-truncate small" style="max-width: 60%;" title="<%= currency[:name] || currency[:symbol] %>">
                      <%= currency[:symbol] %>
                    </span>
                    <span class="badge badge-secondary badge-sm"><%= currency[:count] %></span>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="mt-3">
                <h6 class="text-muted mb-2">Top Sent Tokens</h6>
                <div class="text-muted small">No recent sends</div>
              </div>
            <% end %>
          <% else %>
            <div class="text-center text-muted">No data available</div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="row mt-4">
  <div class="col-12">
    <div class="card">
      <div class="card-header bg-light">
        <div class="d-flex justify-content-between align-items-center">
          <h4 class="mb-0">
            <i class="fas fa-exchange-alt mr-2"></i>
            Recent Multichain Transfers
          </h4>
          <span class="text-muted small">Last 24 hours</span>
        </div>
      </div>
      <div class="card-body p-0">
        <% if @recent_transfers.any? %>
          <div class="table-responsive">
            <table class="table table-hover transfers-table mb-0">
              <thead class="thead-light">
                <tr>
                  <th>Network</th>
                  <th>Time</th>
                  <th>Transaction</th>
                  <th>From</th>
                  <th>To</th>
                  <th>Amount</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <% @recent_transfers.each do |tx| %>
                  <% 
                    chain_id = tx.respond_to?(:ChainId) ? tx.ChainId : tx['ChainId']
                    transfer = tx.respond_to?(:Transfer) ? tx.Transfer : tx['Transfer']
                    block = tx.respond_to?(:Block) ? tx.Block : tx['Block']
                    transaction = tx.respond_to?(:Transaction) ? tx.Transaction : tx['Transaction']
                    
                    next unless transfer && block && transaction
                    
                    network = @networks.values.find { |n| n[:chain_id] == chain_id }
                    next unless network
                    
                    network_key = @networks.key(network)
                    receiver = transfer.respond_to?(:Receiver) ? transfer.Receiver : transfer['Receiver']
                    sender = transfer.respond_to?(:Sender) ? transfer.Sender : transfer['Sender']
                    is_received = receiver&.downcase == @address.downcase
                    
                    block_time = block.respond_to?(:Time) ? block.Time : block['Time']
                    time = Time.parse(block_time) rescue Time.now
                    
                    amount_val = transfer.respond_to?(:Amount) ? transfer.Amount : transfer['Amount']
                    formatted_amount = format_crypto_amount(amount_val)
                    
                    currency = transfer.respond_to?(:Currency) ? transfer.Currency : transfer['Currency']
                    symbol = if currency
                      currency.respond_to?(:Symbol) ? currency.Symbol : currency['Symbol']
                    end || 'ETH'
                  %>
                  <tr>
                    <td><span class="badge network-badge <%= network[:badge] %>"><%= network[:name] %></span></td>
                    <td><%= time.strftime('%Y-%m-%d %H:%M:%S') %></td>
                    <td>
                      <% tx_hash = transaction.respond_to?(:Hash) ? transaction.Hash : transaction['Hash'] %>
                      <%= link_to tx_hash[0..7] + '...', 
                          "/#{network_key == :eth ? 'ethereum' : network_key}/tx/#{tx_hash}", 
                          target: '_blank' %>
                    </td>
                    <td>
                      <% unless is_received %>
                        <i class="fas fa-arrow-right text-danger mr-1"></i>
                      <% end %>
                      <%= link_to format_address(sender),
                          "/#{network_key == :eth ? 'ethereum' : network_key}/address/#{sender}",
                          target: '_blank' %>
                    </td>
                    <td>
                      <% if is_received %>
                        <i class="fas fa-arrow-right text-success mr-1"></i>
                      <% end %>
                      <%= link_to format_address(receiver),
                          "/#{network_key == :eth ? 'ethereum' : network_key}/address/#{receiver}",
                          target: '_blank' %>
                    </td>
                    <td>
                      <%= formatted_amount %> <%= symbol %>
                    </td>
                    <td>
                      <% success = transfer.respond_to?(:Success) ? transfer.Success : transfer['Success'] %>
                      <% if success %>
                        <span class="badge badge-success text-white">Success</span>
                      <% else %>
                        <span class="badge badge-danger text-white">Failed</span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-5 text-muted">No recent transfers found</div>
        <% end %>
      </div>
    </div>
  </div>
</div>

