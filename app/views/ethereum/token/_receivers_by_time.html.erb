<div class="col-12 col-lg-6 mb-4">
  <div class="card">
    <div class="card-header"><%= t('widgets.headers.token_receivers_by_time') %></div>
    <div class="card-body">
      <div id="token_receivers_by_time"><%= t('loading') %></div>
    </div>
  </div>
</div>

<div class="col-12 col-lg-6 mb-4">
  <div class="card">
    <div class="card-header"><%= t('widgets.headers.token_median_receiver_amount_by_time') %></div>
    <div class="card-body">
      <div id="token_median_receiver_amount_by_time"><%= t('loading') %></div>
    </div>
  </div>
</div>

<script>

    $( document ).ready(function() {

        var query = new widgets.query(`query ($network: <%= @network[:network_type] || 'EthereumNetwork!' %>,
                              $token: String!,
                              $dateFormat: String!,
                              $from: ISO8601DateTime,
                              $till: ISO8601DateTime){
                          <%= @network[:protocol] || 'ethereum' %>(network: $network){
                            transfers(currency: {is: $token}
                            height:{gt: 0}
                            amount: {gt: 0}
                            date: {since: $from till: $till}){
                              date{
                                date(format: $dateFormat)
                              }
                              count(uniq: receivers)
                              median: amount(calculate: median)
                            }
                          }
                        }`);

        new widgets.chartByTime('#token_receivers_by_time', query, '<%= @network[:protocol] || 'ethereum' %>.transfers', {
            title: '<%= t('widgets.headers.token_receivers_by_time') %>',
            chartOptions: {
                vAxes: {
                    '0': {
                        title: '<%= t('widgets.titles.uniq_receivers') %>'
                    },
                },
                seriesType: 'bars',
                series: {
                    '0': { color: '#9bc2cf', type: 'line', targetAxisIndex: 0, lineWidth: 3, pointsVisible: true, pointShape: 'diamond', pointSize: 12 }
                }
            },
            dataOptions: [
                {
                    title: {label: '<%= t('widgets.titles.date') %>', type: 'date' },
                    path: 'date.date'
                },
                {
                    title: '<%= t('widgets.titles.uniq_receivers') %>',
                    path: 'count'
                },


            ]
        });

        new widgets.chartByTime('#token_median_receiver_amount_by_time', query, '<%= @network[:protocol] || 'ethereum' %>.transfers', {
            title: '<%= t('widgets.headers.token_median_receiver_amount_by_time') %>',
            chartOptions: {
                vAxes: {
                    '0': {
                        title: '<%= t('widgets.titles.median_amount') %>'
                    },
                },
                seriesType: 'bars',
                series: {
                    '0': { color: '#28a745' }
                }
            },
            dataOptions: [
                {
                    title: {label: '<%= t('widgets.titles.date') %>', type: 'date' },
                    path: 'date.date'
                },
                {
                    title: '<%= t('widgets.titles.median_amount') %>',
                    path: 'median'
                },


            ]
        });

        queryWithTimeRange(rr, query, <%= @from.html_safe %>,<%= @till.html_safe %>,{
            network: '<%= params['network']['network'] %>',
            token: '<%= @address %>'
        });


    });
</script>