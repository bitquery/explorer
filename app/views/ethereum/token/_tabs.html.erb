<%
  nft_id = @id ? ['show_nft_id'] : []
  nft_tabs = (@streaming && @fungible == false) ? ['nft_smart_contract'] : ['show']

%>
<%= render partial: 'shared/tabs', locals: {
  tabs: (
    if @native_token
      %w[show transfers senders receivers money_flow_lite]
    else
      (@info.try(:smart_contract).try(:contract_type) == 'DEX') ?
        nft_tabs + nft_id + %w[holders transfers token_dex_trades dex_trades senders receivers smart_contract transactions methods events inflow outflow calls_contracts money_flow_lite] :
        nft_tabs + nft_id + %w[holders transfers token_dex_trades senders receivers smart_contract transactions methods events inflow outflow calls_contracts money_flow_lite]
    end

  ),
  new_tabs: %w[transfers token_dex_trades]
} %>
