<div class="row">
  <div class="col-12 col-lg-12 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.latest_calls') %></div>
      <div class="card-body">
        <div id="latest_calls"><%= t('loading') %></div>
      </div>
    </div>
  </div>
</div>

<script>

    $( document ).ready(function() {


        var query = new widgets.query(`
                        query ($network: <%= @network[:network_type] || 'EthereumNetwork!' %>,
                                $limit: Int!,
                                $offset: Int!
                                $from: ISO8601DateTime,
                                $till: ISO8601DateTime){
                    <%= @network[:protocol] || 'ethereum' %>(network: $network){
                      smartContractCalls(options:{desc: "block.height", limit: $limit, offset: $offset},
                        date: {since: $from till: $till },
                        external: true
                        ) {

                          block {
                            timestamp {
                              time (format: "%Y-%m-%d %H:%M:%S")
                            }
                            height
                          }

                          address: caller {
                            address
                            annotation
                          }

                          smartContract{
                            address{
                              address
                              annotation
                            }
                          }
                          smartContractMethod {
                            name
                            signatureHash
                          }

                          transaction {
                            hash
                          }


                      }
                    }
                  }`);

        new widgets.table('#latest_calls', query, '<%= @network[:protocol] || 'ethereum' %>.smartContractCalls', {
            title: '<%= t('widgets.headers.latest_calls') %>',
            dataOptions: [
                {
                    title: '<%= t('widgets.titles.timestamp') %>',
                    type: 'string',
                    path: 'block.timestamp.time',
                    style: 'width: 170px;'
                },
                {
                    title: '<%= t('widgets.titles.block') %>',
                    type: 'string',
                    path: 'block.height',
                    urlCallbackName: 'block_path',
                    style: 'width: 80px;'
                },

                {
                    title: '<%= t('widgets.titles.caller') %>',
                    type: 'string-ellipsis',
                    path: ['address.annotation','address.address'],
                    urlCallbackName: 'address_path'
                },
                {
                    title: '<%= t('widgets.titles.smart_contract') %>',
                    type: 'string-ellipsis',
                    path: ['smartContract.address.annotation', 'smartContract.address.address'],
                    urlCallbackName: 'smart_contract_path'
                },
                {
                    title: '<%= t('widgets.titles.method') %>',
                    type: 'string',
                    path: ['smartContractMethod.name','smartContractMethod.signatureHash'],
                    urlCallbackName: 'smart_contract_method_path',
                    style: 'width: 130px'
                },
                {
                    title: '<%= t('widgets.titles.hash') %>',
                    type: 'string-ellipsis',
                    path: 'transaction.hash',
                    urlCallbackName: 'transaction_path'
                },
            ]
        });

        queryWithTimeRange(rr, query, <%= limited_date_range_limit(@from, @till).join(',').html_safe %>,{
            network: '<%= params['network']['network'] %>'
        });

    });

</script>