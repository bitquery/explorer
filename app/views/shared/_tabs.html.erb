<ul class="nav nav-tabs mb-4">
  <li class="nav-item dropdown d-block d-md-none">
    <% tabs.each do |tab| %>
      <% next if params[:action] != tab %>
      <a class="nav-link active dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
        <%= new_tab t("tabs.#{controller.controller_name}.#{tab}.name"), tab, @network, (defined?(new_tabs) && new_tabs || []) %>
      </a>
      <div class="dropdown-menu">
        <% tabs.each do |tab| %>
          <% if tab == 'money_flow_lite' %>
            <a class="dropdown-item" href="https://lite.bitquery.io/?chain=<%= @network[:network] %>&address=<%= @address %>" target="_blank">
              <%= t('tabs.money_flow_lite.name') %>
              <span class="ml-1" style="font-size: 0.8em;">â†—</span>
            </a>
          <% else %>
            <%= tab_a t("tabs.#{controller.controller_name}.#{tab}.name"), tab, @network, (defined?(new_tabs) && new_tabs || []), 'dropdown-item' %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </li>
  <% tabs.each do |tab| %>
    <% if tab == 'money_flow_lite' %>
      <li class="nav-item d-none d-md-block">
        <a class="nav-link underline-link" href="https://lite.bitquery.io/?chain=<%= @network[:network] %>&address=<%= @address %>" target="_blank">
          <%= t('tabs.money_flow_lite.name') %>
          <span class="ml-1" style="font-size: 0.8em;">â†—</span>
        </a>
      </li>
    <% else %>
      <%= tab_link t("tabs.#{controller.controller_name}.#{tab}.name"), tab, @network, (defined?(new_tabs) && new_tabs || []), 'nav-item d-none d-md-block' %>
    <% end %>
  <% end %>
  <%= render partial: 'shared/ads/tab' %>
</ul>