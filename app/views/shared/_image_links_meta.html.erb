<!-- Meta -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="og:site_name" content="Bitquery Explorer" />
<meta property="vk:image" content="<%= 'favicon_new.png' %>" />
<meta property="twitter:image" content="<%= 'favicon_new.png' %>" />
