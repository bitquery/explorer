<div class="col-12 col-lg-6 mb-4">
  <div class="card">
    <div class="card-header"><%= t('widgets.headers.currency_max_token_transfers_by_time', token_name: @token, token_symbol: "") %></div>
    <div class="card-body">
      <div id="max_token_transfers_by_time"><%= t('loading') %></div>
    </div>
  </div>
</div>

<script>

    $( document ).ready(function() {

        var query = new widgets.query(`query (
                              $token: String!,
                              $dateFormat: String!,
                              $date: ISO8601DateTime){
                          eos{
                            transfers(currency: {is: $token}
                            date: {is: $date}){
                              date{
                                date(format: $dateFormat)
                              }

                              max_amount: maximum(of: amount, get: amount)

                            }
                          }
                        }`);

        new widgets.chartByTime('#max_token_transfers_by_time', query, 'eos.transfers', {
            title: '<%= t('widgets.headers.max_token_transfers_by_time') %>',
            chartOptions: {
                vAxes: {
                    '0': {
                        title: '<%= t('widgets.titles.max_amount') %>'
                    },
                },
                seriesType: 'bars',
                series: {
                    '0': { color: '#ffc107', targetAxisIndex: 0 },
                }
            },
            dataOptions: [
                {
                    title: {label: '<%= t('widgets.titles.date') %>', type: 'date' },
                    path: 'date.date'
                },
                {
                    title: '<%= t('widgets.titles.max_amount') %>',
                    path: 'max_amount',
                    type: 'float'
                }

            ]
        });

        query.request({
            token: '<%= @address %>',
            dateFormat: '%Y-%m-%d',
            date: '<%= @block_date %>'
        });


    });
</script>