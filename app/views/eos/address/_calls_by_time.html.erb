<div class="col-12 col-lg-6 mb-4">
  <div class="card">
    <div class="card-header"><%= t('widgets.headers.calls_by_time') %></div>
    <div class="card-body">
      <div id="calls_by_time"><%= t('loading') %></div>
    </div>
  </div>
</div>

<script>

    $( document ).ready(function() {

        var query = new widgets.query(`
            query(
                  $dateFormat: String!,
                  $address: String!, $from: ISO8601DateTime, $till: ISO8601DateTime){
              eos {
                smartContractCalls(date: {since: $from, till: $till}){
                      count(
                        uniq: calls,
                        txFrom: {is: $address}
                      )
                      date{
                        date(format: $dateFormat)
                      }
                    }

              }
            }`);

        new widgets.chartByTime('#calls_by_time', query, 'eos.smartContractCalls', {
            title: '<%= t('widgets.headers.calls_by_time') %>',
            chartOptions: {
                vAxes: {
                    '0': {
                        title: '<%= t('widgets.titles.calls_count') %>'
                    }
                },
                seriesType: 'bars',
                series: {
                    '0': { color: '#007bff' },
                }
            },
            dataOptions: [
                {
                    title: {label: '<%= t('widgets.titles.date') %>', type: 'date' },
                    path: 'date.date'
                },
                {
                    title: '<%= t('widgets.titles.calls_count') %>',
                    path: 'count'
                }
            ]
        });

        queryWithTimeRange(rr, query, <%= @from.html_safe %>,<%= @till.html_safe %>,{

            address: '<%= @address %>'
        });


    });
</script>