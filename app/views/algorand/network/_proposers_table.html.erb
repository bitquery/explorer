<div class="row">
  <div class="col-12 col-lg-12 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.proposers') %></div>
      <div class="card-body">
        <div id="proposers"><%= t('loading') %></div>
      </div>
    </div>
  </div>
</div>

<script>

    $( document ).ready(function() {


        var query = new widgets.query(`
                        query (
                                $limit: Int!,
                                $offset: Int!
                                $from: ISO8601DateTime,
                                $till: ISO8601DateTime){
                    algorand{
                      blocks(options:{desc: "count" asc: "address.address" limit: $limit, offset: $offset},
                        date: {since: $from till: $till }
                        ) {

                        address: proposer {
                          address
                          annotation
                        }

                        count

                        min_date: minimum(of: date)
                        max_date: maximum(of: date)

                      }
                    }
                  }`);

        new widgets.table('#proposers', query, 'algorand.blocks', {
            title: '<%= t('widgets.headers.proposers') %>',
            dataOptions: [
                {
                    title: '<%= t('widgets.titles.proposer') %>',
                    path: ['address.annotation','address.address'],
                    urlCallbackName: 'address_path'
                },


                {
                    title: '<%= t('widgets.titles.first_block_date') %>',
                    path: 'min_date'
                },

                {
                    title: '<%= t('widgets.titles.last_block_date') %>',
                    path: 'max_date'
                },
                {
                    title: '<%= t('widgets.titles.block_count') %>',
                    path: 'count'
                },
            ]
        });

      <% from, till = date_range_from_now(120, :minutes) %>
      queryWithTimeRange(rr, query, "<%= from %>", "<%= till %>", {
          network: '<%= params['network']['network'] %>'
      });


    });

</script>